{
    "type": "panel",
    "i18n": true,
    "items": {
        "_header1": {
            "type": "header",
            "text": "Maxxi CCU Config",
            "size": 3,
            "style": {
                "textAlign": "center",
                "marginBottom": "20px"
            }
        },
        "maxxiCcuName": {
            "type": "text",
			"size": "md",
            "label": "Maxxi CCU Name",
            "newLine": true,
            "default": "maxxi-XXXXXX-YYY",
            "help": "Geben Sie den Namen der Maxxi CCU ein (z. B. maxxi-XXXXXX-YYY).",
            "style": {
                "margin": "0 auto",
                "width": "50%",
                "textAlign": "center"
            }
        },
        "_header1_5": {
            "type": "header",
            "text": "API Modus",
            "size": 3,
            "style": {
                "textAlign": "center",
                "marginTop": "40px",
                "marginBottom": "20px"
            }
        },
        "apiMode": {
            "type": "select",
			"size": "md",
            "label": "Wähle den API Modus",
            "options": [
                {
                    "label": "Cloud API",
                    "value": "cloud"
                },
                {
                    "label": "Local API",
                    "value": "local"
                }
            ],
            "default": "local",
            "help": "Cloud-API:<br>Abfrage alle 30sec (CCU Info) bzw. alle 5min (Settings).<br><br>Local-API:<br>Live Feed.",
            "style": {
                "margin": "0 auto",
                "width": "50%",
                "textAlign": "center"
            }
        },
        "_header2": {
            "type": "header",
            "text": "Maxxi API Port",
            "size": 3,
            "style": {
                "textAlign": "center",
                "marginTop": "40px",
                "marginBottom": "20px"
            }
        },
        "localapiport": {
            "type": "text",
			"size": "md",
            "label": "Local-API Port",
            "newLine": true,
            "default": "5501",
            "help": "Definieren Sie den Port, auf dem die API lauschen soll.",
            "style": {
                "margin": "0 auto",
                "width": "50%",
                "textAlign": "center"
            }
        },
        "_localApiHint": {
            "type": "staticText",
			"size": "md",
            "text": "Für die Nutzung des Local-API Dienstes folgendes beim Api-Route eingeben: 'http://<IP>:<PORT>'",
            "style": {
                "margin": "20px 0",
                "width": "80%",
                "textAlign": "center"
            }
        }
    }
}
